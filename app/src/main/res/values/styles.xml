<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LargeTextView">
        <item name="android:textSize">25dp</item>
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>
    <style name="NormalTextView">
        <item name="android:textSize">15dp</item>
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:paddingBottom">@dimen/text_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextForDetails">
        <item name="android:layout_height">@dimen/text_view_h</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/caldroid_darker_gray</item>
        <item name="android:background">@drawable/black_border</item>
    </style>
    <style name="TextForDetails">
        <item name="android:layout_height">@dimen/text_view_h</item>
        <item name="android:textColor">@color/caldroid_darker_gray</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
</resources>
